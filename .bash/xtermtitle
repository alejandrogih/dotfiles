#!/usr/bin/env bash
# netj's bash module: xterm dynamic title
# Author: Jaeho Shin <netj@sparcs.org>
# Created: 2004-05-28
# Requires: environment prompt

bash_autoload=true

bash_import() {
    xtermtitle_postfix=
    bash_default xtermtitle_label ""
}

bash_load() {
    # xterm's dynamic title for some terminal types
    case $TERM in
        xterm* | cygwin* | screen* | dtterm)
        if [ -n "$TMUX" -o -n "$STY" ]; then
            # in tmux or screen we need not much details
            xtermtitle_postfix=
        else
            # plain terminal
            local tty=`tty`
            tty=${tty#/dev/}
            xtermtitle_postfix="$tty^$hostnickname"
        fi
        # xterm title controller
        title() {
            xtermtitle_label=$*
        }
        # xterm title updater
        xterm_title() {
            local title="\033]0;"
            case $xtermtitle_label in
                "")
                local path=$PWD
                local name=${path##*/}
                local dir=${prompt_pwd_part:-${PWD/#$HOME/~}}
                dir=${dir%/$name}
                title+="$name - ($dir)"
                ;;
                *) title+=`eval echo "$xtermtitle_label"` ;;
            esac
            title+="${xtermtitle_postfix:+ - $xtermtitle_postfix}"
            title+="\007"
            echo -ne "$title"
        }
        # use default if necessary
        title "$xtermtitle_label"
        # register it
        bash_add_prompt xterm_title
        ;;
    esac
}

# vim:et:ts=8:sw=4:sts=4
